{% extends 'layout.html.twig' %}

{% block content %} 
    <h1>Products list</h1>
    
    <div class="row">
        {% for product in products %}
            <div class="col-md-4">
                <div class="thumbnail">
                    {{ product.name }}
                    {{ product.price }}
                    <div class="type">
                        <img src="{{ product.photo }}" class="img-fluid img-responsive img-thumbnail vignette" alt="photo" />
                    </div>
                    <div class="caption">
                        <p> 
                            {{ product.description }} 
                        </p>
                    </div>
                        
                        {# lien vers l'url de mise au panier #}
                    <li><a href=" {{ path('action_add_rack', { 'id': product.id }) }}">Panier</a></li>
                </div>
            </div>  
        {% endfor %}
    </div>
    
{% endblock %}