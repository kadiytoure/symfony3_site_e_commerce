{% extends 'base.html.twig' %}

{% block body %}
    <h1>Like</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ like.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ like.userid }}</td>
            </tr>
            <tr>
                <th>Productid</th>
                <td>{{ like.productid }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if like.date %}{{ like.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('likes_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('likes_edit', { 'id': like.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
